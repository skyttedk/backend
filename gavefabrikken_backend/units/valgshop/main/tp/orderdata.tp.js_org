                    }
                    
                    // Betalingsbetingelser dropdown
                    const paymentTermsProposed = document.getElementById('payment_terms_proposed');
                    const paymentTerms = document.getElementById('payment_terms');
                    
                    if (paymentTermsProposed && paymentTerms) {
